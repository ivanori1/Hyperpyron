<%- include ("partials/header") %>
<div class="container">
  <div class="row">
    <h1 style="text-align: center;">Create a new Send request</h1>
    <div style="width: 30%; margin: 0 auto;">
      <form action="/send" method="POST">
        <div class="form-group">
          <input
            class="form-control"
            type="text"
            name="address"
            placeholder="adresa"
          />
        </div>
        <div class="form-group">
          <input
            class="form-control"
            type="number"
            step="0.01"
            name="amount"
            placeholder="iznos u eurima"
          />
        </div>
        <div class="form-group">
          <button class="btn btn-lg btn-default btn-block btn-primary">
            Napravi Zahtjev
          </button>
        </div>
      </form>
      <a href="/send">Nazad</a>
    </div>
  </div>
</div>
<%- include("partials/footer") %>
